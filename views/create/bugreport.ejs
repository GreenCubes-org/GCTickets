<% title = __('view.create.bugreport.pagetitle') + " â€” " + __('global.pagetitle'),
	backUrl = '/bugreports' %>
<%- partial( '../partials/header') %>
<div class="container">
	<div class="ui two column grid">
		<div class="column" style="width:70%;border-right: 1px solid rgba(0, 0, 0, 0.1);">
			<form id="gc-reportform">
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<div class="ui fluid form" id="gc-reportformdiv">
					<h1 class="header" style="margin: 0px; padding: 0.2em 0em 0em;"><%- __('view.create.bugreport.pagetitle') %>
					</h1>
					<div class="ui divider" style="margin: 1em 0em !important;"></div>
					<div class="two fields">
						<div class="field" style="width: 270px;">
							<label><%- __('view.create.bugreport.form.product') %></label>
							<div class="ui selection fluid dropdown">
								<input name="product" type="hidden">
								<div class="default text"><%- __('view.create.bugreport.form.product.dropdown.defaulttext') %></div>
								<div class="menu">
									<div class="item" data-value="1"><%- __('global.product.unknown') %></div>
									<div class="item" data-value="2"><%- __('global.product.main') %></div>
									<div class="item" data-value="5"><%- __('global.product.websites') %></div>
								</div>
								<i class="dropdown icon"></i>
							</div>
						</div>
					</div>
					<div class="field">
						<label><%- __('view.create.bugreport.form.title') %></label>
						<input name="title" type="text">
					</div>
					<div class="field">
						<label><%- __('view.create.bugreport.form.description') %></label>
						<textarea id="description" name="description"></textarea>
					</div>
					<div class="field">
						<label><%- __('view.create.bugreport.form.logs') %></label>
						<textarea id="logs" style="min-height: 1em; height: 6em;" name="logs"></textarea>
					</div>
					<div class="ui divider"></div>
					<div class="field">
						<label><%- __('view.create.form.upload.title') %></label>
						<input class="ui basic button" type="file" multiple name="upload" value="<%- __('view.create.form.upload.placeholder') %>"></input>
					</div>
					<div class="gc-help"><i class="attention icon"></i><%- __('view.create.form.upload.attention') %></div>
					<div class="ui divider"></div>
					<button class="ui blue submit button" type="submit"><%- __('view.create.form.send') %></button>
					<div id="errmessage"></div>
					<div class="ui dimmer" id="senddimmer">
						<div class="ui large text loader"><%- __('view.create.dimmertext') %></div>
					</div>
				</div>
			</form>
		</div>
		<div class="column" style="width:30%">
			<h2><%- __('view.create.bugreport.panel.title') %></h2>
			<p><%- __('view.create.bugreport.panel.description') %></p>
			<div class="gc-help"><%- __('view.create.panel.helptip') %></div>
			<h2><%- __('view.create.panel.nav.title') %></h2>
			<div class="ui selection list">
				<div class="active item">
					<i class="bug big icon" style="margin:0em 0.5em 0em 0em"></i>
					<a class="gc-nostylelink content" style="display:block" href="/new/bugreport">
						<span class="header" style="display:block"><%- __('view.create.panel.nav.bugreport.title') %></span>
						<span><%- __('view.create.panel.nav.bugreport.description') %></span>
					</a>
				</div>
				<div class="item">
					<i class="remove big icon" style="margin:0em 0.5em 0em 0em"></i>
					<a class="gc-nostylelink content" style="display:block" href="/new/rempro">
						<span class="header" style="display:block"><%- __('view.create.panel.nav.rempro.title') %></span>
						<span><%- __('view.create.panel.nav.rempro.description') %></span>
					</a>
				</div>
				<div class="item">
					<i class="ban circle big icon" style="margin:0em 0.5em 0em 0em"></i>
					<a class="gc-nostylelink content" style="display:block" href="/new/ban">
						<span class="header" style="display:block"><%- __('view.create.panel.nav.ban.title') %></span>
						<span><%- __('view.create.panel.nav.ban.description') %></span>
					</a>
				</div>
				<div class="item">
					<i class="blank circle big icon" style="margin:0em 0.5em 0em 0em"></i>
					<a class="gc-nostylelink content" style="display:block" href="/new/unban">
						<span class="header" style="display:block"><%- __('view.create.panel.nav.unban.title') %></span>
						<span><%- __('view.create.panel.nav.unban.description') %></span>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
<%- partial('../partials/unsaved') %>
<%- partial('partials/errormodal') %>
