<% title = '#'+ globalid + ': "' + ticket.title + '" — GC.Тикеты';
scripts.push('moment.js','single.js','wbb.js');
styles.push('main.css','wbb.css') %>
<%- partial('../partials/header')%>
<div class="container">
	<div class="ui grid">
		<div class="left floated column" style="width: auto; max-width: 20%; padding-right: 0px;">
			<i class="bug icon" style="font-size: 2em; margin-top: 15px;"></i>
		</div>
		<div class="left floated column" style="width: auto; max-width: 72%; padding-left: 0px; min-width: 60%;">
			<h2 class="ui header">
				<span><%= ticket.title %></span>
				<div class="sub header">
<% if (req.user) {
	if (req.user.id === ticket.ownerId || req.user.group >=2) { %>
<a href="/id/<%= globalid %>/edit" title="Изменить"><i class="pencil small icon" id="s-editicon"></i></a>
<% } } %>
&nbsp;<a href="/id/<%= globalid %>">#<%= globalid %></a> 
&raquo;&nbsp;<%= ticket.owner %>
&raquo;&nbsp;<%= moment(ticket.createdAt).format('Do MMM YYYY, h:mm') %>
<% if (ticket.product || ticket.product !== 42) { %>&raquo;&nbsp;<%= ticket.product %><% } %>
				</div>
			</h2>
		</div>
		<div class="right floated two wide column">
			<div class="s-status <%= ticket.status.class %>"><%= ticket.status.text %></div>
			<div class="s-visiblity"><%= ticket.visiblity %></div>
		</div>
	</div>
	<div class="ui divider"></div>
	<div class="ui grid">
		<div class="column" style="width: 56%;">
			<h2 class="ui header">Описание</h2>
			<p class="s-description"><%- ticket.description %></p>
			
			<% if (ticket.logs) {%>
			<div class="ui accordion">
				<div class="title">
					<i class="dropdown icon"></i>
					Логи
				</div>
				<div class="content">
					<p class="s-logs"><%- ticket.logs %></p>
				</div>
			</div>
			<% } %>
		</div>
		<div class="seven wide column" style="padding-bottom: 10em; border-left: 1px solid rgba(0, 0, 0, 0.1);">
			<div class="ui grid">
				<div class="left floated column">
					<h2 class="ui header">Комментарии</h2>
				</div>
				<div class="right floated column s-commentsrefresh">
					<a href="#" id="commentrefresh"><i class="refresh icon"></i></a>
				</div>
			</div>
			<div class="ui comments container" id="comments"></div>
			<form class="ui reply form container" id="commentpost">
				<div class="field" id="commentfield">
					<textarea id="commentform" name="message"></textarea>
				</div>
				<div class="ui teal submit fluid small button" type="submit" id="commentsubmit">Комментировать</div>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
			<div class="ui divider"></div>
			<div class="ui selection dropdown">
				<input name="visiblity" type="hidden">
				<div class="default text">Смена статуса тикета</div>
				<div class="menu">
					<div class="item" data-value="1">Виден всем</div>
					<div class="item" data-value="2">Виден только разработчику</div>
				</div>
				<i class="dropdown icon"></i>
			</div>
		 </div>
		</div>
</div>
<div class="ui basic modal" id="remcomment">
    <div class="header">
      Удалить этот комментарий?
    </div>
    <div class="content">
      <div class="left">
        <i class="remove sign icon"></i>
      </div>
      <div class="right">
        <p>Вы уверены, что хотите удалить этот комментарий?</p>
      </div>
    </div>
    <div class="actions">
      <div class="two fluid ui buttons">
        <div class="ui negative labeled icon button">
          <i class="remove icon"></i>
          Нет, вернёмся обратно
        </div>
        <div class="ui positive right labeled icon button">
          Да, удалить
          <i class="checkmark icon"></i>
        </div>
      </div>
    </div>
  </div>
