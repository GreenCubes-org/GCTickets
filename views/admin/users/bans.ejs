<% title = __('view.admin.users.bans.pagetitle') + " — " + __('global.pagetitle'); %>

<div class="container">
	<h1 class="ui header"><a href="/admin" class="nostyle link" style="position: relative; margin-right: -3.7rem; right: 3.7rem; color: rgba(0, 0, 0, 0.4);"><i class="chevron left small icon"></i></a><%- __('view.admin.users.bans.title','<a class=\"gc-nostylelink\" href=\"/admin\">','</a>') %></h1>
	<div class="ui divider"></div>

	<table class="ui table">
		<thead>
			<tr>
				<th><%- __('view.admin.users.bans.login') %></th>
				<th><%- __('view.admin.users.bans.ip') %></th>
				<th><%- __('view.admin.users.bans.whoban') %></th>
				<th><%- __('view.admin.users.bans.message') %></th>
				<th style="width:5%"></th>
			</tr>
		</thead>
		<tbody>
		<% banlist.forEach(function(element) {%>
			<tr>
				<td><%= element.login %></td>
				<td><%= element.ip %></td>
				<td><%= element.by %></td>
				<td><%= element.message %></td>
				<td><a class="gc-nostylelink" href="/admin/users/bans/remove/<%= element.id %>"><i  class="icon remove"></i></a></td>
			</tr>
		<% }) %>
		</tbody>
	</table>

	<div class="ui divider"></div>

	<h2 class="ui header">Изменить бан</h2>
	<form id="gc-newban">
		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		<div class="ui small form" style="width: 600px;">
			<div class="two fields">
				<div class="field">
					<label><%- __('view.admin.users.bans.login') %></label>
					<input placeholder="ChangedNick" type="text" name="username">
				</div>
				<div class="field">
					<label><%- __('view.admin.users.bans.ip') %></label>
					<input placeholder="127.0.0.1" type="text" name="ip">
				</div>
			</div>
			<div class="field">
				<label><%- __('view.admin.users.bans.message') %></label>
				<textarea placeholder="<%- __('view.admin.users.bans.message.placeholder') %>" name="message"></textarea>
			</div>
			<div class="ui divider"></div>
			<button class="ui blue submit button" type="submit"><%- __('view.admin.users.bans.send') %></button>
			<div id="errmessage"></div>
		</div>
	</form>
</div>
