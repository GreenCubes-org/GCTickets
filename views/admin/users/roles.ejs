<% title = __('view.admin.users.roles.pagetitle') + " — " + __('global.pagetitle'); %>

<div class="container">
	<h1 class="ui header"><a href="/admin" class="nostyle link" style="position: relative; margin-right: -3.7rem; right: 3.7rem; color: rgba(0, 0, 0, 0.4);"><i class="chevron left small icon"></i></a><%- __('view.admin.users.roles.title', '<a class="gc-nostylelink" href="/admin">', '</a>') %></h1>
	<div class="ui divider"></div>
	<h5><%- __('view.admin.users.roles.disclaimer') %></h5>
	<table class="ui table">
		<thead>
			<tr>
				<th><%- __('view.admin.users.roles.nickname') %></th>
				<th><%- __('view.admin.users.roles.group') %></th>
				<th><%- __('view.admin.users.roles.prefix') %></th>
				<th><%- __('view.admin.users.roles.colorclass') %></th>
				<th><%- __('view.admin.users.roles.canmoderate') %></th>
				<th style="width:5%"></th>
			</tr>
		</thead>
		<tbody>
		<% rights.forEach(function(element) {%>
			<tr>
				<td><%= element.login %></td>
				<td><%= gch.user.getGroupString(element.ugroup) %></td>
				<td><%= element.prefix %></td>
				<td><%= element.colorclass %></td>
				<td><%= element.canModerate %></td>
				<td><a class="gc-nostylelink" href="/admin/users/roles/remove/<%= element.uid %>"><i  class="icon remove"></i></a></td>
			</tr>
		<% }) %>
		</tbody>
	</table>

	<div class="ui divider"></div>

	<h2 class="ui header"><%- __('view.admin.users.roles.form.title') %></h2>
	<form id="gc-newrole">
		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		<div class="ui small form" style="width: 600px;">
			<div class="two fields">
				<div class="field">
					<label><%- __('view.admin.users.roles.prefix') %></label>
					<input placeholder="[HELP!]" type="text" name="prefix">
				  </div>
				<div class="field">
					<label><%- __('view.admin.users.roles.nickname') %></label>
					<input placeholder="ChangedNick" type="text" name="username">
				</div>
			</div>
			<div class="two fields">
			  <div class="field">
				<label><%- __('view.admin.users.roles.group') %></label>
				<div class="ui fluid selection dropdown">
				  <div class="text"><%- __('view.ui.dropdown.select') %></div>
				  <i class="dropdown icon"></i>
				  <input name="ugroup" type="hidden">
				  <div class="menu">
					<div class="item" data-value="0"><%- __('global.ugroup.user') %></div>
					<div class="item" data-value="1"><%- __('global.ugroup.helper') %></div>
					<div class="item" data-value="2"><%- __('global.ugroup.moderator') %></div>
					<div class="item" data-value="3"><%- __('global.ugroup.team') %></div>
				  </div>
				</div>
			  </div>
			  <div class="field">
				<label><%- __('view.admin.users.roles.colorclass') %></label>
				<div class="ui fluid selection dropdown">
				  <div class="text"><%- __('view.ui.dropdown.select') %></div>
				  <i class="dropdown icon"></i>
				  <input name="colorclass" type="hidden">
				  <div class="menu">
					<div class="item" data-value="none"><%- __('view.admin.users.roles.colorclass.item.none') %></div>
					<div class="item" data-value="red">Red</div>
					<div class="item" data-value="green">Green</div>
					<div class="item" data-value="purple">Purple</div>
				  </div>
				</div>
			  </div>
			</div>
			<div class="grouped inline fields">
				<label><%- __('view.admin.users.roles.canmoderate') %></label>
				<div class="field">
				  <div class="ui checkbox">
					<input name="mod-main" type="checkbox">
					<label>Main</label>
				  </div>
				</div>
				<div class="field">
				  <div class="ui checkbox">
					<input name="mod-rpg" type="checkbox">
					<label>RPG</label>
				  </div>
				</div>
				<div class="field">
				  <div class="ui checkbox">
					<input name="mod-apo" type="checkbox">
					<label>Apocalyptic</label>
				  </div>
				</div>
			  </div>
			<div class="ui divider"></div>
			<button class="ui blue submit button" type="submit">Отправить</button>
			<div id="errmessage"></div>
		</div>
	</form>
</div>
